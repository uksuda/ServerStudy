<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>disable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <!--<Protobuf Include="..\Protos\*.proto" GrpcServices="Server" OutputDir="%(RelativeDir)..\ServerGrpc\Protos" />-->
	<!--<Protobuf Include="..\Protos\*.proto" GrpcServices="Server" />-->
    <Protobuf Include="..\Protos\*.proto" GrpcServices="Server" OutputDir="%(RelativeDir)..\ServerGrpc\Protos" CompileOutputs="false" />
  </ItemGroup>
	
  <PropertyGroup>
	<Protobuf_NoWarnMissingExpected>true</Protobuf_NoWarnMissingExpected>
	<AnalysisLevel>latest</AnalysisLevel>
  </PropertyGroup>
	
  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.25.1" />
    <PackageReference Include="Grpc.AspNetCore" Version="2.59.0" />
    <PackageReference Include="Grpc.AspNetCore.Server.Reflection" Version="2.59.0" />
    <PackageReference Include="Grpc.AspNetCore.Web" Version="2.59.0" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="8.0.0" />
    <PackageReference Include="Serilog.AspNetCore" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Protos\" />
  </ItemGroup>

</Project>
